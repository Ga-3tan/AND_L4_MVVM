<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_note_list_fragment_tablet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="heig.and.lab4.NoteListFragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_tablet_menu_fragment"
        app:layout_constraintVertical_weight="2"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_tablet_menu_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="heig.and.lab4.TabletMenuFragment"
        app:layout_constraintTop_toBottomOf="@+id/main_note_list_fragment_tablet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>